a: array of int = {1, 2, 3, 4};
a[1]++;
assert(a[1] == a[2]);
a[3]--;
assert(a[3] == a[2]);
t: {a0: int, a1: int, a2: int, a3: int} = {1, 2, 3, 4};
t.a1++;
assert(t.a1 == t.a2);
t.a3--;
assert(t.a3 == t.a2);
s: string = "\x1\x2\x3\x4";
s[1]++;
assert(s[1] == s[2]);
s[3]--;
assert(s[3] == s[2]);
b: bytes = X"01020304";
b[1]++;
assert(b[1] == b[2]);
b[3]--;
assert(b[3] == b[2]);
assert(convert(string, a) == "{ 1, 3, 3, 3 }");
assert(convert(string, t) == "{ 1, 3, 3, 3 }");
assert(s == "\x1\x3\x3\x3");
assert(b == X"01030303");
